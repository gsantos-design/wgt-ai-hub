# Copy this file to .env and fill in values.
# Never commit your real .env. Keep keys server-side only.

# Google Gemini API (server-side only; DO NOT expose to browser)
GEMINI_API_KEY=

# Optional: Google reCAPTCHA v3
# Only expose RECAPTCHA_SITE_KEY to the client; keep RECAPTCHA_SECRET on server.
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET=
RECAPTCHA_MIN_SCORE=0.5

# Optional: Google Apps Script endpoint for lead capture
APPS_SCRIPT_LEADS_URL=

# Optional: SendGrid email notifications for new leads
SENDGRID_API_KEY=
LEAD_NOTIFY_TO=

# Server
PORT=3000
LEAD_MIN_AGE_MS=800

